<!DOCTYPE html>
<html>
  <head>
    <title>ComicImpre</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="bg-light p-2">
      <nav class="navbar navbar-expand-lg">
        <div class="container mt-4">

          <div class="navbar">
            <h1>
            <strong>
              <%= link_to root_path, class:"text-dark" do %>
                <i class="fas fa-house-user"></i>
                  Comic Impre
                <i class="fas fa-book"></i>
              <% end %>
            </strong>
          </h1>

           <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-5">
            <% if customer_signed_in? %>

              <li class ="rounded mr-4">
                <%= link_to public_customer_path(current_customer.id), class:"btn btn-primary btn-bg" do %>
                  <i class="fas fa-user"></i> マイページ
                <% end %>
              </li>
              <li class ="rounded mr-4">
                    <%= link_to new_public_comic_path, class:"btn btn-success btn-bg" do %>
                      <i class="fas fa-plus"></i> 投稿フォーム
                    <% end %>
              </li>
              <li class ="rounded mr-4">
                    <%= link_to public_comics_path, class:"btn btn-warning btn-bg" do %>
                      <i class="fas fa-book-open"></i> みんなの投稿
                    <% end %>
              </li>
              <li class ="rounded mr-4">
                    <%= button_to destroy_customer_session_path, method: :delete, class:"btn btn-secondary btn-bg" do %>
                      <i class="fas fa-sign-out-alt"></i> ログアウト
                    <% end %>
              </li>

                <% elsif admin_signed_in? %>

              <li class ="rounded mr-5">
                <%= link_to admin_customers_path, class:"btn btn-info btn-bg" do %>
                  <i class="fas fa-users"></i> 会員一覧
                <% end %>
              </li>
              <li class ="rounded mr-5">
                <%= link_to admin_comics_path, class:"btn btn-warning btn-bg" do %>
                  <i class="fas fa-book-open"></i> 投稿一覧
                <% end %>
              </li>
              <li class ="rounded mr-5">
                <%= link_to admin_top_path, class:"btn btn-success btn-bg" do %>
                  <i class="fas fa-cogs"></i> 設定一覧
                <% end %>
              </li>
              <li class ="rounded mr-5">
                <%= button_to destroy_admin_session_path, method: :delete, class:"btn btn-secondary btn-bg" do %>
                  <i class="fas fa-sign-out-alt"></i> ログアウト
                <% end %>
              </li>

                <% else %>
                  <li class ="rounded mr-4">
                    <%= button_to public_customers_guest_sign_in_path, method: :post, class:"btn btn-secondary btn-bg" do %>
                      <i class="fas fa-users"></i> ゲストログイン
                    <% end %>
                  </li>
                  <li class ="rounded mr-4">
                    <%= link_to new_customer_session_path, class:"btn btn-success btn-bg" do %>
                      <i class="fas fa-sign-in-alt"></i> ログイン
                    <% end %>
                  </li>
                  <li class ="rounded mr-4">
                    <%= link_to new_customer_registration_path, class:"btn btn-primary btn-bg" do %>
                      <i class="fas fa-user-plus"></i> 新規登録
                    <% end %>
                  </li>
                  <li class ="rounded mr-4">
                    <%= link_to public_comics_path, class:"btn btn-warning btn-bg" do %>
                      <i class="fas fa-book-open"></i> みんなの投稿
                    <% end %>
                  </li>

                <% end %>
              </ul>
            </div>
            </div>
            </nav>

            <div class="container">
              <div class="row text-center">
                <div class="col">
                <%= render 'layouts/search' %>
                </div>
              </div>
            </div>

    </header>

      <%= render 'layouts/flash' %>

    <%= yield %>

    <footer class="bg-light mt-2">
      <div class="container p-2">
        <div class="text-center">
          <%= link_to admin_session_path, class:"btn btn-dark btn-sm" do %>
            <i class="fas fa-user-lock"></i> 管理者ログイン
          <% end %>
        </div>
      </div>
    </footer>

  </body>
</html>
