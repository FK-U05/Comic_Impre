<div class="container mt-5">

  <div class="row">
    <div class="col">
      <h3 class="text-center"><strong>ジャンル編集</strong></h3>
    </div>
  </div>

  <div class="row text-center mt-5">
    <div class="col">
        <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch do |f| %>
          <strong><%= f.label :ジャンル名 %></strong>
          <%= f.text_field :genre_name %>
          <%= f.submit "変更保存", class:"btn btn-success btn-sm" %>
        <% end %>
    </div>
  </div>

  <div class="row text-center mt-3">
    <div class="col">
      <%= link_to "戻る", admin_top_path, class:"btn btn-warning btn-sm" %>
      <%= link_to "削除する", admin_genre_path(@genre), method: :delete, class:"btn btn-danger btn-sm", data: {confirm: "ジャンル名を削除しますか？"} %>
    </div>
  </div>

</div>