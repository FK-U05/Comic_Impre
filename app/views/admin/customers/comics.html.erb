<div class="container mt-5">
  <div class="row">
    <div class="col-md-2">
        <!-- ユーザー情報 -->
        <table class="table table-bordered">
          <tr>
            <th><%= image_tag @customer.get_profile_image(100,100) %></th>
          </tr>

          <tr>
            <th><%= @customer.name %></th>
          </tr>

          <tr>
            <th><%= link_to "会員情報を編集する", edit_admin_customer_path(@customer) %></th>
          </tr>
        </table>
    </div>

    <div class="col">

      <% if @customer.comics.exists? %>

        <h3><%= @customer.name %>の投稿一覧</h3>
              <% @comics.each do |comic| %>
                <table class="table table-bordered">
                    <tr>
                      <th>タイトル</th>
                      <td><%= comic.title %></td>
                    </tr>

                    <tr>
                      <th>著者名</th>
                      <td><%= comic.name %></td>
                    </tr>

                    <tr>
                      <th>出版社</th>
                      <td><%= comic.company %></td>
                    </tr>

                    <tr>
                      <th>発行年月日</th>
                      <td><%= comic.release_date.strftime("%Y年%m月%d日") %></td>
                    </tr>

                    <tr>
                      <th>おすすめ度</th>
                      <td>
                        <div class="star-rate">
                          <div id="star-rate-<%= comic.id %>"></div>

                            <script>
                              $('#star-rate-<%= comic.id %>').raty({
                              size      : 36,
                              starOff   : '<%= asset_path('star-off.png') %>',
                              starOn    : '<%= asset_path('star-on.png') %>',
                              starHalf  : '<%= asset_path('star-half.png') %>',
                              half      : true,
                              readOnly: true,
                              score: <%= comic.star %>,
                              });
                            </script>

                        </div>
                      </td>
                    </tr>

                    <tr>
                      <th>ジャンル</th>
                      <td>
                        <% comic.genres.each do |genre| %>
                          <%= link_to admin_genre_comics_genre_path(genre_id: genre.id) do %>
                            <%= genre.genre_name %>
                          <% end %>
                        <% end %>
                      </td>
                    </tr>

                    <tr>
                      <th>タグ</th>
                      <td>
                        <% comic.tags.each do |tag| %>
                          <%= link_to admin_tag_comics_tag_path(tag_id: tag.id) do %>
                            <%= tag.tag_name %>
                          <% end %>
                        <% end %>
                      </td>
                    </tr>

                    <tr>
                      <td><%= link_to "投稿詳細", admin_comic_path(comic) %></td>
                    </tr>

                </table>

              <% end %>

      <% else %>
        <p>まだこのユーザーは投稿していません</p>
      <% end %>

        <%= link_to "戻る", admin_customer_path(@customer) %>

    </div>
  </div>
</div>