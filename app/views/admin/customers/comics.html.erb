<div class="container mt-5">
  <div class="row">
    <div class="col-md-2 text-center">
      <%= render 'admin/customers/customer', customer: @customer %>
      <%= link_to "会員詳細へ戻る", admin_customer_path(@customer), class:"btn btn-warning btn-bg" %>
    </div>

    <div class="col">

      <% if @customer.comics.exists? %>

        <h3 class="text-center"><strong><%= @customer.name %> の投稿一覧</strong></h3>
          <div class="col text-right">
            <%= paginate @comics %>
          </div>

          <%= render 'admin/comics/comic', comics: @comics %>

      <% else %>
        <h5 class="text-center">まだこのユーザーは投稿していません</h5>
      <% end %>

    </div>
  </div>
</div>