<div class="container mt-5">

  <div class="row mt-2">

    <div class-"col-md-2">
      <%= render 'customer', customer: @customer %>
    </div>

    <div class="col">
      <h3 class="text-center"><strong>下書き一覧</strong></h3>

        <% if @comics.exists? %>

          <% @comics.each do |comic| %>
            <table class="table table-bordered text-center">

              <tr>
                <th width="20%">タイトル</th>
                <td><%= comic.title %></td>
              </tr>

              <tr>
                <th>著者名</th>
                <td><%= comic.name %></td>
              </tr>

              <tr>
                <th>出版社</th>
                <td><%= comic.company %></td>
              </tr>

              <tr>
                <th>投稿したユーザー</th>
                <td><%= comic.customer.name %></td>
              </tr>

              <!--星レビュー機能-->
              <tr>
                <th>おすすめ度</th>
                <td>
                  <div class="star-rate">
                    <div id="star-rate-<%= comic.id %>"></div>

                      <script>
                        $('#star-rate-<%= comic.id %>').empty();
                        $('#star-rate-<%= comic.id %>').raty({
                        size      : 36,
                        starOff   : '<%= asset_path('star-off.png') %>',
                        starOn    : '<%= asset_path('star-on.png') %>',
                        starHalf  : '<%= asset_path('star-half.png') %>',
                        half      : true,
                        readOnly: true,
                        score: <%= comic.star %>,
                        });
                      </script>

                  </div>
                </td>
              </tr>

              <tr>
                <th>ジャンル</th>
                <td>
                  <% comic.genres.each do |genre| %>
                    <%= genre.genre_name %>
                  <% end %>
                </td>
              </tr>

              <tr>
                <th>タグ</th>
                <td>
                  <% comic.tags.each do |tag| %>
                    <%= tag.tag_name %>
                  <% end %>
                </td>
              </tr>

              <tr>
                <th>作成日時</th>
                <td><%= comic.created_at.strftime("%Y年%m月%d日") %></td>
              </tr>

              <tr>
                <th>本文</th>
                <td><%= comic.body.truncate(10) %></td>
              </tr>

              <tr>
                <th>公開範囲</th>
                <td><%= comic.status_i18n %></td>
              </tr>

              <tr>
                <td colspan="2"><%= link_to "編集する", edit_admin_comic_path(comic), class:"btn btn-success btn-bg" %></td>
              </tr>

            </table>
          <% end %>

        <% else %>

          <div class="text-center mt-3">
            <h5 class="text-center">下書き途中のものはありません</h5>
          </div>

        <% end %>

    </div>

  </div>

</div>