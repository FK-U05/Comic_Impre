<div class="container mt-5">

  <div class="row">
    <div class="col">
      <h3 class="text-center"><strong>会員一覧</strong></h3>
    </div>
  </div>

<div class="row mt-3">
  <div class="col text-center">
    <% @customers.each do |customer| %>


        <table class="table table-bordered">
            <tr>
              <th>
                <%= link_to admin_customer_path(customer) do %>
                  <%= image_tag customer.get_profile_image(100,100) %>
                <% end %>
                 会員ID: <%= customer.id %>
              </th>
              <th>ユーザー名</th>
              <td><%= customer.name %></td>
              <th>会員登録日</th>
              <td><%= customer.created_at.strftime("%Y年%m月%d日") %></td>
              <th>会員ステータス</th>
                <% if customer.is_deleted %>
                  <td>退会</td>
                <% else %>
                  <td>有効</td>
                <% end %>
              <td>
                <%= link_to "会員詳細へ", admin_customer_path(customer), class:"btn btn-info btn-bg" %>
              </td>
            </tr>
        </table>
        <% end %>
      </div>
     </div>


</div>