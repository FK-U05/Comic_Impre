<h3>会員一覧</h3>
  <% @customers.each do |customer| %>

    <p>会員ID</p>:
      <%= customer.id %>

      <%= link_to admin_customer_path(customer) do %>
        <%= image_tag customer.get_profile_image(50,50) %>
      <% end %>

    <p>ユーザー名</p>:
      <%= customer.name %>

    <p>メールアドレス</p>:
      <%= customer.email %>

    <p>会員ステータス</p>:
      <% if customer.is_deleted %>
        <p>退会</p>
      <% else %>
        <p>有効</p>
      <% end %>

  <% end %>