<table class="table table-bordered text-center">
  <tr class="bg-light">
    <th>
      <%= link_to admin_customer_path(customer) do %>
        <%= image_tag customer.get_profile_image(100,100) %>
      <% end %>
    </th>
  </tr>

  <tr class="bg-light">
    <th>
      <%= link_to admin_customer_path(customer) do %>
        <%= customer.name %>
      <% end %>
    </th>
  </tr>

  <tr>
    <th><%= link_to "会員情報を編集", edit_admin_customer_path(customer), class:"text-success" %></th>
  </tr>

  <tr>
    <th><%= link_to "下書き一覧", draft_admin_customer_path(customer), class:"text-secondary" %></th>
  </tr>

  <tr>
    <th>
      <%= link_to comics_admin_customer_path(customer), class:"text-warning" do %>
        <%= customer.name %><br>
        の投稿一覧
      <% end %>
    </th>
  </tr>

  <tr>
    <th><%= link_to "ブックマーク一覧", bookmark_admin_customer_path(customer), class:"text-info" %></th>
  </tr>
</table>