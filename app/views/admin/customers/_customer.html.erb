<table class="table table-bordered text-center">
  <tr>
    <th>
      <%= link_to admin_customer_path(customer) do %>
      <%= image_tag customer.get_profile_image(100,100) %>
      <% end %>
    </th>
  </tr>

  <tr>
    <th><%= customer.name %></th>
  </tr>

  <tr>
    <th><%= link_to "会員情報を編集", edit_admin_customer_path(customer) %></th>
  </tr>

  <tr>
    <th><%= link_to "下書き一覧", draft_admin_customer_path(customer) %></th>
  </tr>

  <tr>
    <th>
      <%= link_to admin_customers_comics_path(customer) do %>
        <%= customer.name %>の投稿一覧
      <% end %>
    </th>
  </tr>

  <tr>
    <th><%= link_to "ブックマーク一覧", admin_customers_bookmark_path(customer) %></th>
  </tr>
</table>