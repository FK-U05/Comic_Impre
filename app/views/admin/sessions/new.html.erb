<div class="container mt-5 mb-5">

  <div class="row">
    <div class="col text-center">
      <h3 class="p-1 bg-secondary text-light">
        <strong>管理者ログイン</strong>
      </h3>
    </div>
  </div>

  <div class="bg-light">

    <%= form_with model: @admin, url: admin_session_path do |f| %>

      <div class="field row mt-3">
        <div class="col-md-6 text-right mt-5">
          <strong><%= f.label :メールアドレス %></strong>
        </div>
        <div class="col-md-6 text-left mt-5">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@example.com" %>
        </div>
      </div>

      <div class="field row mt-4">
        <div class="col-md-6 text-right">
          <strong><%= f.label :パスワード %></strong>
        </div>
        <div class="col-md-6 text-left">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "password"%>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field row mt-5 text-center">
          <div class="col">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end %>

      <div class="row mt-5 text-center">
        <div class="col">
          <%= f.submit "ログインする", class:"btn btn-secondary btn-bg mb-5" %>
        </div>
      </div>

    <% end %>

  </div>

</div>
