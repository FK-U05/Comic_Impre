<div class="container mt-5">
  <div class="row">

    <div class="col">
      <h3 class="text-center"><strong>設定一覧</strong></h3>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">
        <table class="table table-bordered text-center">
          <thead bgcolor="whitesmoke">
            <th colspan="2">ジャンル一覧</th>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <th><%= genre.genre_name %></th>
                <td width="30%"><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success btn-bg" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
    <div class="col">

        <table class="table table-bordered text-center">
          <thead bgcolor="whitesmoke">
            <th colspan="2">タグ一覧</th>
          </thead>
          <tbody>
            <% @tags.each do |tag| %>
              <tr>
                <th><%= tag.tag_name %></th>
                <td width="30%"><%= link_to "編集する", edit_admin_tag_path(tag), class:"btn btn-success btn-bg" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>

  </div>
</div>
