<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h3 class="text-center"><%= params[:word] %> の検索結果</h3>
    </div>
  </div>

  <div class="row">
    <div class="col">

      <% if @range == "Comic" %>

        <%= render 'admin/comics/comic', comics: @comics %>

      <% elsif @range == "Customer" %>

          <% @customers.each do |customer| %>
            <table class="table table-bordered">
                <tr>
                  <th><%= image_tag customer.get_profile_image(50,50) %>
                      会員ID: <%= customer.id %>
                  </th>
                  <td>ユーザー名:<%= customer.name %></td>
                  <td>会員ステータス:
                    <% if customer.is_deleted %>
                      退会
                    <% else %>
                      有効
                    <% end %>
                  </td>
                  <td>会員登録日:<%= customer.created_at.strftime("%Y年%m月%d日") %></td>
                  <td><%= link_to "詳細", admin_customer_path(customer), class:"btn btn-info btn-sm" %></td>
                </tr>
            </table>
          <% end %>

      <% end %>

  </div>
</div>
