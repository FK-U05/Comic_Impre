<div class="container mt-5">
  <div class="row">

    <div class="col-md-2">
      <%= render 'admin/customers/customer', customer: @comic.customer %>
      <div class="text-center">
      <%= link_to "投稿詳細へ戻る", admin_comic_path(@comic), class:"btn btn-warning btn-sm" %>
      </div>
    </div>

    <div class="col">
      <h3 class="text-center"><strong><%= @comic.title %> へのコメント一覧</strong></h3>
            <% if @comic.comic_comments.exists? %>
              <% @comic.comic_comments.each do |comment| %>
                <table class="table table-bordered">
                   <tr>
                      <th class="text-center" width="10%">
                        <%= link_to admin_customer_path(comment.customer) do %>
                          <%= image_tag comment.customer.get_profile_image(50,50) %>
                        <% end %>
                        <%= comment.customer.name %></th>
                      <td><%= comment.comment %></td>
                      <td class="text-center" width="10%">
                        <%= link_to "削除", admin_comic_comic_comment_path(comment.comic, comment), method: :delete, class:"btn btn-danger btn-sm", data: {confirm: "コメントを削除しますか？"} %>
                      </td>
                    </tr>
                </table>
              <% end %>

            <% else %>
              <div class="text-center mt-5">
                <h5>コメントはありません</h5>
              </div>
            <% end %>
    </div>

  </div>
</div>