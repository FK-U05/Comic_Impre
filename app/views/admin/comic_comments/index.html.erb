<div class="container mt-5">
  <div class="row">

    <div class="col-md-2">
      <%= render 'admin/customers/customer', customer: @comic.customer %>
    </div>

    <div class="col">
      <h3><%= @comic.title %>へのコメント一覧</h3>
            <% if @comic.comic_comments.exists? %>
              <% @comic.comic_comments.each do |comment| %>
                <table>
                   <tr>
                      <td>
                        <%= link_to admin_customer_path(comment.customer) do %>
                          <%= image_tag comment.customer.get_profile_image(50,50) %>
                        <% end %>
                      </td>
                      <td><%= comment.customer.name %></td>
                    </tr>
                    <tr>
                      <td>コメント</td>
                      <td><%= comment.comment %></td>
                    </tr>
                    <tr>
                      <td><%= link_to "削除", admin_comic_comic_comment_path(comment.comic, comment), method: :delete %></td>
                    </tr>
                </table>
              <% end %>

            <% else %>
              <p>コメントはありません</p>
            <% end %>

    </div>
  </div>
  <div class="row">
    <div class="col">
        <%= link_to "投稿詳細へ戻る", admin_comic_path(@comic) %>
    </div>
  </div>
</div>