 <!-- コメントした漫画を投稿したユーザーの情報 -->
  <%= image_tag @comic.customer.get_profile_image(50,50) %>
  <%= @comic.customer.name %>

  <%= link_to "ユーザー情報を編集する", edit_admin_customer_path(@comic.customer) %>

  <h3><%= @comic.title %>へのコメント一覧</h3>

    <% @comic.comic_comments.each do |comment| %>

      <%= image_tag comment.customer.get_profile_image(50,50) %>
      <%= comment.customer.name %>
      <%= comment.comment %>

      <%= link_to "削除", admin_comic_comic_comment_path(comment.comic, comment), method: :delete %>

    <% end %>

    <%= link_to "投稿詳細へ戻る", admin_comic_path(@comic) %>