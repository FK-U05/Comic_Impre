<div class="container mt-5">

  <div class="text-center">
    <h2>ログイン</h2>
  </div>

  <div class="text-center">
      <%= form_with model: @customer, url: customer_session_path do |f| %>

        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@example.com" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "password"%>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログインする", class:"btn btn-info btn-sm" %>
        </div>

      <% end %>

  </div>
</div>


