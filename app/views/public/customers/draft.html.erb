<div class="container mt-5">

  <div class="row mt-2">

    <div class-"col-md-2">
      <%= render 'customer', customer: @customer %>
    </div>

    <div class="col">
      <h3 class="text-center"><strong>下書き一覧</strong></h3>

        <% if @comics.exists? %>

          <% @comics.each do |comic| %>
            <table class="table table-bordered text-center mt-3 ml-4">

              <tr class="bg-light">
                <th width="20%">タイトル</th>
                <td colspan="3"><%= comic.title %></td>
              </tr>

              <tr>
                <th class="bg-light">著者名</th>
                <td><%= comic.name %></td>

                <th class="bg-light" width="20%">出版社</th>
                <td><%= comic.company %></td>
              </tr>




              <!--星レビュー機能-->
              <tr>
                <th class="bg-light">おすすめ度</th>
                <td colspan="3">
                  <div class="star-rate">
                    <div id="star-rate-<%= comic.id %>"></div>

                      <script>
                        $('#star-rate-<%= comic.id %>').empty();
                        $('#star-rate-<%= comic.id %>').raty({
                        size      : 36,
                        starOff   : '<%= asset_path('star-off.png') %>',
                        starOn    : '<%= asset_path('star-on.png') %>',
                        starHalf  : '<%= asset_path('star-half.png') %>',
                        half      : true,
                        readOnly: true,
                        score: <%= comic.star %>,
                        });
                      </script>

                  </div>
                </td>
              </tr>

              <tr>
                <th class="bg-light">ジャンル</th>
                <td>
                  <% comic.genres.each do |genre| %>
                    <%= genre.genre_name %>
                  <% end %>
                </td>

                <th class="bg-light">タグ</th>
                <td>
                  <% comic.tags.each do |tag| %>
                    <%= tag.tag_name %>
                  <% end %>
                </td>
              </tr>

              <tr>
                <th class="bg-light">本文</th>
                <td colspan="3"><%= comic.body.truncate(10) %></td>
              </tr>

              <tr>
                <th class="bg-light">作成日時</th>
                <td><%= comic.created_at.strftime("%Y年%m月%d日") %></td>

                <th class="bg-light">公開範囲</th>
                <td colspan="3"><%= comic.status_i18n %></td>
              </tr>

              <tr class="bg-light">
                <td colspan="4">
                  <%= link_to "編集する", edit_public_comic_path(comic), class:"btn btn-success btn-bg" %>
                  <%= link_to "削除する", public_comic_path(comic), method: :delete, class:"btn btn-danger btn-bg ml-5", data: {confirm: "この投稿を削除しますか？"} %>
                </td>
              </tr>

            </table>
          <% end %>

        <% else %>

          <div class="text-center mt-3">
            <h5 class="text-center">下書き途中のものはありません</h5>
          </div>

        <% end %>

    </div>

  </div>

</div>