<div class="container mt-3 mb-5">
  <div class="row mt-2">

    <div class="col-md-2 text-center">
      <%= render 'public/customers/customer', customer: @customer %>
      <%= link_to "会員詳細へ戻る", public_customer_path(@customer), class:"btn btn-info btn-bg" %>
    </div>

    <div class="col ml-4 text-center">
      <h3 class="p-1 bg-warning"><strong><%= @customer.name %> の投稿一覧</strong></h3>
        <% if @customer.comics.exists? %>
          <div class="col text-right">
            <%= paginate @comics %>
          </div>

          <%= render 'public/comics/comic', comics: @comics %>

        <% else %>

          <h5 class="text-center mt-5">投稿がありません。新規投稿は<%= link_to "こちら", new_public_comic_path %></h5>

       <% end %>
    </div>

  </div>
</div>
