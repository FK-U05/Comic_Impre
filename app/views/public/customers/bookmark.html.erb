<div class="container mt-5">
  <div class="row">

      <div class="col-md-2">
        <%= render 'customer', customer: @customer %>
      </div>

      <div class="col">
        <h3 class="text-center"><strong>ブックマーク一覧</strong></h3>
        <% if @customer.bookmarks.exists? %>
          <div class="col text-right">
            <%= paginate @bookmark_comics %>
          </div>

          <% @customer.bookmarks.each do |bookmark| %>
            <table class="table table-bordered text-center">

              <tr>
                <th width="20%">タイトル</th>
                <td>
                  <%= link_to public_comic_path(bookmark.comic) do %>
                    <%= bookmark.comic.title %>
                  <% end %>
                </td>
              </tr>

              <tr>
                <th>著者名</th>
                <td><%= bookmark.comic.name %></td>
              </tr>

              <tr>
                <th>出版社</th>
                <td><%= bookmark.comic.company %></td>
              </tr>

              <tr>
                <th>投稿したユーザー</th>
                <td>
                  <%= link_to public_customer_path(bookmark.comic.customer) do %>
                    <%= bookmark.comic.customer.name %>
                  <% end %>
                </td>
              </tr>

              <tr>
                <th>おすすめ度</th>
                <td>
                    <div class="star-rate">
                      <div id="star-rate-<%= bookmark.comic.id %>"></div>

                        <script>
                          $('#star-rate-<%= bookmark.comic.id %>').raty({
                          size      : 36,
                          starOff   : '<%= asset_path('star-off.png') %>',
                          starOn    : '<%= asset_path('star-on.png') %>',
                          starHalf  : '<%= asset_path('star-half.png') %>',
                          half      : true,
                          readOnly: true,
                          score: <%= bookmark.comic.star %>,
                          });
                        </script>

                    </div>
                  </td>
                </tr>

                <tr>
                  <th>ジャンル</th>
                  <td>
                    <% bookmark.comic.genres.each do |genre| %>
                      <%= link_to public_genre_comics_genre_path(genre_id: genre.id) do %>
                        <%= genre.genre_name %>
                      <% end %>
                    <% end %>
                  </td>
                </tr>

                <tr>
                  <th>タグ</th>
                  <td>
                    <% bookmark.comic.tags.each do |tag| %>
                      <%= link_to public_tag_comics_tag_path(tag_id: tag.id) do %>
                        <%= tag.tag_name %>
                      <% end %>
                    <% end %>
                  </td>
                </tr>

                <tr>
                  <th>投稿日時</th>
                  <td><%= bookmark.comic.created_at.strftime("%Y年%m月%d日") %></td>
                </tr>

                <tr>
                  <th>本文</th>
                  <td><%= bookmark.comic.body.truncate(10) %></td>
              </tr>

            </table>
          <% end %>

        <% else %>

          <div class="col mt-5">
            <h5 class="text-center">まだブックマークしていません</h5>
          </div>

        <% end %>
      </div>

  </div>
</div>