<div class="container mt-3">

  <div class="row text-center">
    <div class="col">
      <h3><strong>マイページ編集</strong></h3>
    </div>
  </div>

      <%= form_with model: @customer, url: public_customer_path(@customer), method: :patch do |f| %>

        <div class="row text-center mt-5">
          <div class="col">
            <p>変更前の画像<%= image_tag @customer.get_profile_image(100,100) %></p>
          </div>
        </div>

        <div class="form-group row text-center mt-3">
          <div class="col">
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
        </div>

        <div class="form-group row text-center mt-2">
          <div class="col">
            <strong><%= f.label :ユーザー名 %></strong>
          </div>
          <div class="col">
            <%= f.text_field :name %>
          </div>
        </div>

        <div class="form-group row text-center mt-2">
          <div class="col">
            <strong><%= f.label :メールアドレス %></strong>
          </div>
          <div class="col">
            <%= f.email_field :email %>
          </div>
        </div>

        <div class="row text-center mt-2">
          <div class="col">
            <%= f.submit "変更保存", class:"btn btn-success btn-bg" %>
          </div>
        </div>

      <% end %>

  <div class="row text-center">
    <div class="col">
      <%= link_to "戻る", public_customer_path(current_customer), class:"btn btn-warning btn-sm" %>
    </div>
    <div class="col">
      <%= link_to "退会する", public_customers_quit_path, class:"btn btn-danger btn-bg" %>
    </div>
  </div>

</div>
