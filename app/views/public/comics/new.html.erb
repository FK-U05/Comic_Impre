<div class="container mt-5">
  <div class="text-center">

    <h3>投稿フォーム</h3>

      <%= form_with model: @comic, url: public_comics_check_path(@comic), method: :post do |f| %>

        <div class="form-group">
          <%= f.label :漫画のタイトル %>
          <p><%= f.text_field :title %></p>
        </div>

        <div class="form-group">
          <%= f.label :漫画の著者名 %>
          <p><%= f.text_field :name %></p>
        </div>

        <div class="form-group">
          <%= f.label :出版社 %>
          <p><%= f.text_field :company %></p>
        </div>

        <div class="form-group">
          <%= f.label :発行年月日 %>
          <p><%= f.date_field :release_date %></p>
        </div>

        <div class="form-group">
          <%= f.label :本文 %>
          <p><%= f.text_area :body, size:"60x10" %></p>
        </div>

        <!--星レビュー機能-->
        <p>おすすめ度</p>
        <div class="form-group" id="star">
          <%= f.hidden_field :star, id: :review_star %>
        </div>

           <script>
             $('#star').empty();
             $('#star').raty({
               size: 36,
               starOff:  '<%= asset_path('star-off.png') %>',
               starOn:   '<%= asset_path('star-on.png') %>',
               starHalf: '<%= asset_path('star-half.png') %>',
               half: true,
               scoreName: 'comic[star]',
             });
           </script>

        <div class="form-group">
          <%= f.label :ジャンル %>
          <p><%= f.text_field :genre_name %></p>
          <p><%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :genre_name,{ multiple:true }) %></p>
        </div>

        <div class="form-group">
          <%= f.label :タグ %>
          <p><%= f.text_field :tag_name %></p>
          <p><%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name,{ multiple:true }) %></p>
        </div>

        <%= f.submit "投稿確認画面へ" %>

    <% end %>

  </div>
</div>