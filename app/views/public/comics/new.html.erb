<div class="container mt-5">

  <div class="row">
    <div class="col">
    <h3 class="text-center"><strong>投稿フォーム</strong></h3>
    </div>
  </div>

  <div class="row text-center">
    <div class="col mt-3">

      <%= form_with model: @comic, url: public_comics_check_path(@comic), method: :post do |f| %>

        <div class="form-group">
          <strong><%= f.label :タイトル %></strong>
          <%= f.text_field :title, placeholder: "作品のタイトル" %>
        </div>

        <div class="form-group">
          <strong><%= f.label :著者名 %></strong>
          <%= f.text_field :name, placeholder: "作者名" %>
        </div>

        <div class="form-group">
          <strong><%= f.label :出版社 %></strong>
          <%= f.text_field :company, placeholder: "出版社名" %>
        </div>

        <div class="form-group">
          <strong><%= f.label :発行年月日 %></strong>
          <%= f.date_field :release_date %>
        </div>

        <div class="form-group">
          <strong><%= f.label :本文 %></strong>
          <p><%= f.text_area :body, size:"60x10", placeholder: "作品の良かったところやおすすめしたいところ" %></p>
        </div>

        <!--星レビュー機能-->
        <strong>おすすめ度(☆いくつかをお選び下さい)</strong>
        <div class="form-group" id="star">
          <%= f.hidden_field :star, id: :review_star %>
        </div>

           <script>
             $('#star').empty();
             $('#star').raty({
               size: 36,
               starOff:  '<%= asset_path('star-off.png') %>',
               starOn:   '<%= asset_path('star-on.png') %>',
               starHalf: '<%= asset_path('star-half.png') %>',
               half: true,
               scoreName: 'comic[star]',
             });
           </script>

        <div class="form-group">
          <strong><%= f.label :ジャンル %></strong>
          <p><%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :genre_name,{ multiple:true }) %></p>
          <p><%= f.text_field :genre_name, placeholder: "その他" %></p>
        </div>

        <div class="form-group">
          <strong><%= f.label :タグ %></strong>
          <p><%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name,{ multiple:true }) %></p>
          <p><%= f.text_field :tag_name, placeholder: "その他" %></p>
        </div>

        <%= f.submit "投稿確認画面へ", class:"btn btn-info btn-bg" %>

    <% end %>

    </div>
  </div>
</div>