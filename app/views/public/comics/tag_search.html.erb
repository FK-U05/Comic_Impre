<div class="container mt-3 mb-5">

  <div class="row text-center">
    <div class="col">
      <h3 class="p-1 bg-danger text-light">
        <strong><%= @tag.tag_name %> の投稿一覧</strong>
      </h3>
    </div>
  </div>
  
  <div class="row mt-3 text-center font-weight-bold">
    <div class="col">
      <%= link_to '投稿日時が新しい順', tag_comics_tag_path(@tag, latest: "true") %> /
      <%= link_to '投稿日時が古い順', tag_comics_tag_path(@tag, old: "true") %> /
      <%= link_to 'おすすめ度の高い順', tag_comics_tag_path(@tag, star_count: "true") %> /
      <%= link_to 'コメント数の多い順', tag_comics_tag_path(@tag, comic_comment: "true") %> /
      <%= link_to 'ブックマーク数の多い順', tag_comics_tag_path(@tag, bookmark_count: "true") %> /
      <%= link_to '閲覧数の多い順', tag_comics_tag_path(@tag, view_count: "true") %>
    </div>
  </div>

  <div class="row mt-3 justify-content-center">
    <div class="col-md-10">
      <%= paginate @comics %>
      <%= render 'comic', comics: @comics %>
    </div>
  </div>

</div>