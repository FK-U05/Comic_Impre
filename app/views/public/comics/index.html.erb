<h3>投稿一覧</h3>

<% @comics.each do |comic| %>

  <p>漫画のタイトル</p>
  <%= link_to public_comic_path(comic) do %>
  <%= comic.title %>
  <% end %>

  <p>漫画の著者名</p>
  <%= comic.name %>

  <p>出版社</p>
  <%= comic.company %>

  <p>発行年月日</p>
  <%= comic.release_date %>

  <p>本文</p>
  <%= comic.body %>

  <!--星レビュー機能-->
   <div class="star-rate">
    <div id="star-rate-<%= comic.id %>"></div>

       <script>
         $('#star-rate-<%= comic.id %>').raty({
           size      : 36,
           starOff   : '<%= asset_path('star-off.png') %>',
           starOn    : '<%= asset_path('star-on.png') %>',
           starHalf  : '<%= asset_path('star-half.png') %>',
           half      : true,
           readOnly: true,
           score: <%= comic.star %>,
         });
       </script>

    </div>

  <% comic.genres.each do |genre| %>
    <p>ジャンル</p>
    <%= genre.genre_name %>
  <% end %>

  <% comic.tags.each do |tag| %>
    <p>タグ</p>
    <%= tag.tag_name %>
  <% end %>

<% end %>