<div class="container mt-5">

  <div class="row">
    <div class="col">
      <h3 class="text-center"><strong>投稿一覧</strong></h3>
    </div>
  </div>

  <div class="row mt-3 text-center">
    <div class="col">

      <%= link_to '投稿日時が新しい順', public_comics_path(latest: "true") %> /
      <%= link_to '投稿日時が古い順', public_comics_path(old: "true") %> /
      <%= link_to 'おすすめ度の高い順', public_comics_path(star_count: "true") %> /
      <%= link_to 'コメント数の多い順', public_comics_path(comic_comment: "true") %> /
      <%= link_to 'ブックマーク数の多い順', public_comics_path(bookmark_count: "true") %>

    </div>
  </div>
  <div class="row">
    <div class="col-md-2">

      <table class="table table-bordered text-center">
        <thead>
          <th class="bg-light">ジャンルリスト</th>
        </thead>
        <tbody>
          <% @genre_list.each do |genre| %>
          <tr>
            <th>
              <%= link_to public_genre_comics_genre_path(genre_id: genre.id), class:"text-success" do %>
                <%= genre.genre_name %>
              <% end %>
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>

      <table class="table table-bordered text-center">
        <thead>
          <th class="bg-light">タグリスト</th>
        </thead>
        <tbody>
          <% @tag_list.each do |tag| %>
            <tr>
              <th>
                <%= link_to public_tag_comics_tag_path(tag_id: tag.id), class:"text-danger" do %>
                  <%= tag.tag_name %>
                <% end %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col mt-4">
      <div class="col text-right">
        <%= paginate @comics %>
      </div>

      <%= render 'comic', comics: @comics %>
    </div>

  </div>

</div>