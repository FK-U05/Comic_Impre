 <div class="container mt-5">
  <div class="row">

    <div class="col-md-2">
      <%= render 'public/customers/customer', customer: @comic.customer %>
    </div>

    <div class="col">
      <h3><%= @comic.title %>へのコメント一覧</h3>
          <% if @comic.comic_comments.exists? %>
            <% @comic.comic_comments.each do |comment| %>
              <table class="table table-bordered">
                  <tr>
                    <td>
                      <%= link_to public_customer_path(comment.customer) do %>
                      <%= image_tag comment.customer.get_profile_image(50,50) %>
                      <% end %>
                    </td>
                    <td><%= comment.customer.name %></td>
                  </tr>
                  <tr>
                    <td>コメント</td>
                    <td><%= comment.comment %></td>
                  </tr>

                    <% if comment.customer == current_customer %>
                      <tr>
                        <td>
                          <%= link_to "削除", public_comic_comic_comment_path(comment.comic, comment), method: :delete %>
                        </td>
                      </tr>
                    <% end %>
              </table>
            <% end %>

          <% else %>
            <p>コメントはありません</p>
          <% end %>

    </div>

  </div>
  <div class="row">
    <div class="col">
        <%= link_to "戻る", public_comic_path(@comic) %>
    </div>
  </div>

</div>