 <!-- コメントした漫画を投稿したユーザーの情報 -->
  <%= image_tag @comic.customer.get_profile_image(50,50) %>
  <%= @comic.customer.name %>

  <% if @comic.customer == current_customer %>
    <%= link_to "ユーザー情報を編集する", edit_public_genre_path(@comic.customer) %>
  <% end %>

  <h3><%= @comic.title %>へのコメント一覧</h3>

    <% @comic.comic_comments.each do |comment| %>

      <%= image_tag comment.customer.get_profile_image(50,50) %>
      <%= comment.customer.name %>
      <%= comment.comment %>

      <% if comment.customer == current_customer %>
        <%= link_to "削除", public_comic_comic_comment_path(comment.comic, comment), method: :delete %>
      <% end %>

    <% end %>

